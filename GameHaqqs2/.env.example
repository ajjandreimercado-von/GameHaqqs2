################################################################################
# GAMEHAQQS - FULL STACK APPLICATION ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your actual values
################################################################################

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=GameHaqqs
APP_ENV=local
APP_KEY=base64:your-app-key-here  # Generate with: php artisan key:generate
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# ============================================================================
# DATABASE CONFIGURATION
# Pre-configured for XAMPP MySQL
# ============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=gamehaqqs_db
DB_USERNAME=root
DB_PASSWORD=

# ============================================================================
# LOGGING
# ============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================================================
# SESSION & AUTHENTICATION (SANCTUM)
# ============================================================================
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=localhost

# Sanctum Configuration
# These domains can make cross-domain API requests without CSRF token
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,localhost:5173,localhost:8000,127.0.0.1:8000,127.0.0.1:5173

# Token expiration time (in minutes)
# 525600 = 1 year
SANCTUM_EXPIRATION=525600

# ============================================================================
# CACHE & QUEUE
# ============================================================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================================================
# MAIL CONFIGURATION
# ============================================================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================================
# AWS S3 (Optional)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================================================
# VITE (Frontend Build Tool)
# ============================================================================
VITE_APP_NAME="${APP_NAME}"

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Enable CORS for frontend development
# Configured in: app/Http/Middleware/HandleCors.php
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost,http://127.0.0.1

################################################################################
# IMPORTANT SETUP INSTRUCTIONS
################################################################################
# 
# 1. START XAMPP SERVICES
#    Open XAMPP Control Panel and start MySQL and Apache
#
# 2. CREATE DATABASE
#    mysql -u root -p
#    CREATE DATABASE gamehaqqs_db;
#
# 3. GENERATE APP KEY
#    php artisan key:generate
#
# 4. RUN MIGRATIONS
#    php artisan migrate:fresh
#
# 5. SEED TEST DATA (Optional)
#    php artisan db:seed
#
# 6. START BACKEND SERVER
#    php artisan serve
#
# 7. START FRONTEND SERVER (in frontend/ directory)
#    npm install
#    npm run dev
#
# FRONTEND will be available at: http://localhost:5173
# BACKEND will be available at: http://127.0.0.1:8000
#
# Both servers must be running for full-stack functionality
#

